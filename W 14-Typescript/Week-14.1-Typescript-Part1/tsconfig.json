{
  "compilerOptions": {
    // Target is the lowest version of the language that we are targeting
    // In this case, we are targeting ES2016 which is the lowest version of the language
    // that supports classes, interfaces, decorators, and other features that we are
    // using in the app
    "target": "es2016",
    // This flag is used to prevent the compiler from compiling the same file
    // multiple times if the casing of the file name is different.
    // For example, if we have a file named "foo.ts" and another file named "FOO.ts",
    // the compiler will not compile either of them if this flag is set to true.
    "forceConsistentCasingInFileNames": true,
    // This flag is used to enable all strict type-checking options.
    // This is useful for catching type errors at compile-time
    // rather than at runtime.
    "strict": true,
    // This flag is used to tell the compiler to not check the type
    // declarations of the dependencies in the project.
    // This is useful if you are using a dependency that is not
    // well-maintained or if you have a custom dependency that
    // does not have type declarations.
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
  }
}

